#!/bin/bash
# 位置リスト表示（静かなバージョン）
echo "📋 保存済み位置一覧:"

# 一時ファイルに出力を保存
temp_file="/tmp/cobot_list_output"
ros2 service call /cobot/list std_srvs/srv/Empty > "$temp_file" 2>&1

# 位置情報のみ抽出して表示
grep -A 10 "📋 保存済み位置" "$temp_file" | grep -E "  - |📋 保存済み位置 \([0-9]+件\):" | grep -v "requester\|response"

# 一時ファイル削除
rm -f "$temp_file"